{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "es2022",
    "allowSyntheticDefaultImports": true,
    "noEmit": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "allowImportingTsExtensions": true,
    "erasableSyntaxOnly": true,
    "esModuleInterop": true
  },
  "include": ["src"]
}
